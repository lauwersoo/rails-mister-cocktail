<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
  <%= dose.ingredient.name %>
  <%= dose.description %>
  <%= link_to "Delete an ingredient", dose_path(dose), method: :delete %>
<% end %>

<%= link_to "Home", cocktails_path %>
<%= link_to "Add more ingredients", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Delete", cocktail_path(@cocktail), method: :delete %>
